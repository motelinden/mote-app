.row
  %aside.span4
    %section
      %h1
        = gravatar_for @user, size: 52
        = @user.name
    %secion= render 'shared/stats'
  .span8
    = render 'follow_form' if signed_in?
    - if @user.microposts.any?
      %h3
        Microposts
        = @user.microposts.count
      %ol.micropost
        = render @microposts
      = will_paginate @microposts
