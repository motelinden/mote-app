.row
  %aside.span4
    %section
      %h1
        = gravatar_for @user, size: 52
        = @user.name
  .span8
    - if @user.microposts.any?
      %h3
        Microposts
        = @user.microposts.count
      %ol.micropost
        = render @microposts
      = will_paginate @microposts
